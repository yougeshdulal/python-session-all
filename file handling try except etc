try:
    f = open("test.txt")
    f.close()
except Exception as ex:
    print(f"Error on file {ex}")
print("This is remaining works!")


try:
    f = open("test.txt", 'r')
    f.close()
except Exception as ex:
    print(f"Error on file {ex}")
else:
    print("Inside file")
print("This is remaining works!")



try:
