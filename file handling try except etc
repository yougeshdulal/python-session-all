exception handling mechanism

try:
    a = 22 / 0
    print(a)
except:
    print("There is error")
print("This is demo")


try:
    a = 22 / 0
    print(a)
except ZeroDivisionError:
    print(f"There is error{ZeroDivisionError}")
print("This is demo")



try:
    a = 22 / 0
    print(a)
except ZeroDivisionError as ze:
    print(f"There is error {ze}")
print("This is demo")



try:
    a = 22 / 0
    # a = [22, 33, 55]
    # print(a[5])
except Exception as ex:
    print(f"There is error {ex} {type(ex)} {type(ex).__name__}")
print("This is demo")



try:
    a = 22 / 2
    print(a)
except Exception as ex:
    print(f"There is error {ex}")
print("This is demo")




try:
    a = 22 / 0
    print(a)
except Exception as ex:
    print(f"There is error {ex}")
else:
    print("We are on next stuff")
print("This is demo")


try:
    a = 22 / 2
    print(a)
except Exception as ex:
    print(f"There is error {ex}")
else:
    print("We are on next stuff")
print("This is demo")



try:
    a = 22 / 0
    print(a)
except Exception as ex:
    print(f"There is exception {ex}")
else:
    print("We are on next stuff")
finally:
    print("This is try except block")
print("This is demo")



try:
    a = 22 / 2
    print(a)
except Exception as ex:
    print(f"There is exception {ex}")
else:
    print("We are on next stuff")
finally:
    print("This is try except block")
print("This is demo")




