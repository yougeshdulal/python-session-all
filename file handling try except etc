try:
    f = open("test1.txt", 'r')
    data = f.read()
    print(data)
    f.close()
except Exception as ex:
    print(f"Error on file {ex}")
else:
    print("Inside file")
print("This is remaining works!")



try:
    f = open("test1.txt", 'r')
    data = f.read()
    print(data)
    print(type(data))
    f.close()
except Exception as ex:
    print(f"Error on file {ex}")
else:
    print("Inside file")
print("This is remaining works!")
