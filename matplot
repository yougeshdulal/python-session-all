#####TRY IT OUT
import matplotlib.pyplot as plt
import numpy as np
names = ['ram','shyam','hari','nisha']
students_count = ['std1','std2','std3','std4']
age = [22,31,27,19]
u_colors = ['red','green','black','blue']
# plt.plot(names,age)
plt.bar(names,age,color = u_colors)
plt.xticks(ticks=students_count)
plt.show()


