import matplotlib.pyplot as plt
import numpy as np
x = np.arange(15)
print(x)
x = np.arange(2,15)
print(x)
x = np.arange(2,15,3)
print(x)

import matplotlib.pyplot as plt
import numpy as np
names = ['ram','shyam','hari','nisha']
age = [22,31,27,19]
plt.plot(names,age)
plt.xlabel('Names')
plt.ylabel('Age')
plt.show()

