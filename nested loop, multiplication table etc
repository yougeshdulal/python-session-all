mark1 = input("Enter the mark1 ")
mark1 = float(mark1)
mark2 = float(input("Enter the mark2 "))
total = mark1 + mark2
per = total/2
print("Scored percentage is", per)
if per >= 32:
    print("Passed")
else:
    print("Try Again!")

