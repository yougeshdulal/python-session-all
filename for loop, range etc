# question 11
sum_even = int()
sum_odd = 0
for i in range (1,6):
    if i%2 == 0:
        sum_even = sum_even + i
    else:
        sum_odd = sum_odd + i
print(f"Sum of even numbers is {sum_even}")
print(f"Sum of odd numbers is {sum_odd}")
